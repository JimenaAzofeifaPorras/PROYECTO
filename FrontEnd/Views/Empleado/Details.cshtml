@model FrontEnd.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>DETAILS</h1>
<h4>Detalles del empleado:</h4>
<hr />
<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalles del Empleado</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IdEmpleado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdEmpleado)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.SegundoApellido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SegundoApellido)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NumeroTelefonico)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NumeroTelefonico)
                </dd>
            </dl>
        </div>
    </div>
    <hr />
</div>
<div class="mt-3" style="padding-top: 20px">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>