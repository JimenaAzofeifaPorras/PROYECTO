@model FrontEnd.Models.ServicioViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Eliminar Servicio</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3>¿Seguro que deseas borrar esto?</h3>
            <hr />
            <h4 class="card-title">Detalles del Servicio</h4>
            <dl class="row">
                <dt class="col-sm-3">ID del Servicio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdServicio)</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3">Imagen:</dt>
                <dd class="col-sm-9"><img src="@Model.Imagen" class="img-thumbnail" alt="Imagen del Servicio" /></dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        @Html.HiddenFor(Model => Model.IdServicio)
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </form>
</div>
