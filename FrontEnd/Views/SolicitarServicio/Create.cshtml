@model FrontEnd.Models.SolicitarServicioViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>CREATE</h1>
<h4>Agregar una Nueva Solicitud</h4>
<hr />
<div class="container">
    <div class="card">
        <div class="row p-md-3 mx-auto">
            <div class="">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 8px">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="NumeroTelefono" class="control-label"></label>
                                    <input asp-for="NumeroTelefono" class="form-control" />
                                    <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Correo" class="control-label"></label>
                                    <input asp-for="Correo" class="form-control" />
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="TamanoPiscina" class="control-label"></label>
                            <input asp-for="TamanoPiscina" class="form-control" />
                            <span asp-validation-for="TamanoPiscina" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Direccion" class="control-label"></label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoServicio" class="control-label"></label>
                            <input asp-for="TipoServicio" class="form-control" />
                            <span asp-validation-for="TipoServicio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DescripcionProblema" class="control-label"></label>
                            <input asp-for="DescripcionProblema" class="form-control" />
                            <span asp-validation-for="DescripcionProblema" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top: 15px">
                            <input type="submit" value="Crear Solicitud" class="btn btn-primary" />
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div style="padding-top: 20px">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}