@model IEnumerable<FrontEnd.Models.SolicitarServicioViewModel>

@{
    ViewData["Title"] = "Index";
}
<br></br>
<h1>Menu de Solicitudes para Servicios</h1>
<br></br>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear solicitud</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead class="table-dark vertical-align: middle;">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Numero de Telefono
                </th>
                <th>
                    Correo
                </th>
                <th>
                    Tamano de Piscina
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Tipo de Producto
                </th>
                <th>
                    Descripcion
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdServicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroTelefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamanoPiscina)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoServicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionProblema)
                    </td>
                    <td style="padding-right: 5px">
                        @Html.ActionLink("Details", "Details", new { id = item.IdServicio }, new { @class = "btn btn-success" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
