@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalles del Producto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">ID del Servicio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdProducto)</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>