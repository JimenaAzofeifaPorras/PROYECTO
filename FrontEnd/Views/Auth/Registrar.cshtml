@page
@model FrontEnd.Models.ClienteViewModel

<h1>Registro</h1>

<form method="post" asp-page-handler="Registrar">
    <div>
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" required>
    </div>
    <div>
        <label for="Apellido">Apellido:</label>
        <input type="text" id="Apellido" name="Apellido" required>
    </div>
    <div>
        <label for="SegundoApellido">Segundo Apellido:</label>
        <input type="text" id="SegundoApellido" name="SegundoApellido" required>
    </div>
    <div>
        <label for="Correo">Correo:</label>
        <input type="email" id="Correo" name="Correo" required>
    </div>
    <div>
        <label for="NumeroTelefonico">Telefono:</label>
        <input type="text" id="NumeroTelefonico" name="NumeroTelefonico" required>
    </div>
    <div>
        <label for="Contrasena">Contraseña:</label>
        <input type="password" id="Contrasena" name="Contrasena" required>
    </div>
    <button type="submit">Registrarse</button>
</form>

